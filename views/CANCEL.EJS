<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="<%= csrfToken %>" name="_csrf">
    <title><%= title %></title>
    <link href="../../../css/dashboard.css" rel="stylesheet">
    <link href="../../../css/nav.css" rel="stylesheet">
    <link href="../../../css/new.css" rel="stylesheet">
</head>
<body>
<%- include("nav.ejs",{admin:admin,link:"sports"}) %>
<%- include("notification.ejs") %>
<main>
    <div class="breadcrumb">
        <ul>
            <li><a href="/sports">Sports</a></li>
            <li>/</li>
            <li><a href="/sports/<%= session[0].sport %>"><%= session[0].sport %></a></li>
            <li>/</li>
            <li><a href="/sports/<%= session[0].sport %>/<%= session[0].id %>">#<%= session[0].id %></a></li>
            <li>/</li>
            <li><a href="#">Cancel-Session</a></li>
        </ul>
    </div>
    <div class="intro">
        <h1>Cancel Session <%= session[0].sport %> #<%= session[0].id %></h1>
        <div class="buttons">
            <a href="/sports/<%= session[0].sport %>/<%= session[0].id %>" class="cancel">Cancel</a>
        </div>
    </div>
    <form id="cancel-Sport" action="/sports/<%= session[0].sport %>/<%= session[0].id %>/cancel-session" method="post">
        <input name="_csrf" type="hidden" value="<%= csrfToken %>">
        <div class="form-group">
            <label for="reason">Reason for cancellation of session</label>
            <input id="reason" name="reason" type="text" required>
            <button class="cancel-session" type="submit">Cancel Session</button>
        </div>
    </form>
</main>
</body>
</html>
